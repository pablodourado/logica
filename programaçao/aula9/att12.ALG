Algoritmo "semnome"

Var

   n1,n2,n3: inteiro

Inicio

   escreval ("vamos descobrir qual é o numero sucessor e o antecessor de qualquer outro numero")
   escreval (" ")
   escreva ( "digite o numero desejado: " )
   leia (n1)
   n2 <- n1 - 1
   n3 <- n1 + 1
   escreva ("o numero sucessor ha",n1," é",n3)
   escreva (" e o numero antecessor ha",n1," é",n2)

Fimalgoritmo