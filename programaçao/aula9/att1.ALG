Algoritmo "semnome"

Var

   raio,p,area: real

Inicio

   escreva ("vamos calcular a area de uma circunferencia")
   escreval ("---------------------------------------------")
   escreva ("digite o tamanho do raio: ")
   leia (raio)
   p <- 3.14
   area <- (raio * raio) * p
   escreva ("a area da circunferencia é: ",area)

Fimalgoritmo